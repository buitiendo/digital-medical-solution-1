<header id="header">
  <nav class="navbar navbar-default navbar-fixed white no-background bootsnav text-uppercase">
    <div class="container">    
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
          <i class="fa fa-bars"></i>
        </button>
        <%= link_to image_tag("logo (1).png"), root_url %>
      </div>
      <div class="collapse navbar-collapse" id="navbar-menu">
        <ul class="nav navbar-nav navbar-right" data-in="fadeInDown" data-out="fadeOutUp">
          <li class="dropdown">
            <%= link_to t(".home"), class:"dropdown-toggle", data: {toggle:"dropdown"} %>
            <ul class="dropdown-menu">
              <li class="dropdown-inside"><%= link_to t(".post"), posts_path %></li>
              <li class="dropdown-inside"><%= link_to t(".practice"), "#" %></li>
              <li class="dropdown-inside"><%= link_to t(".yoga"), "#" %></li>
              <li class="dropdown-inside"><%= link_to t(".video"), videos_path %></li>
            </ul>
          </li>
          <li><%= link_to t(".contact"), new_message_path %></li>
          <li class="dropdown">
            <% if can? :create, Post %>
              <%= link_to t(".upload"), class:"dropdown-toggle", data: {toggle:"dropdown"} %>
              <ul class="dropdown-menu">
                <li class="dropdown-inside"><%= link_to t(".create_post"), posts_new_path %></li>
                <li class="dropdown-inside"><%= link_to t(".create_video"), new_video_path %></li>
              </ul>
            <% end %>
          </li>
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <li><%= link_to t(".admin_page"), admin_users_path %></li>
            <% end %>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"}  do %>
                <i class="fa fa-user"></i><%= current_user.name %>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".edit"), "#edituser", "data-toggle" => "modal", :class => 'btn btn-small edit' %></li>
                <li><%= link_to t(".logout"), destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".sign_in"), "#signin", "data-toggle" => "modal", :class => 'btn btn-small sign_in' %></li>
          <% end %>
        </ul>
      </div>
    </div>  
  </nav>
</header>

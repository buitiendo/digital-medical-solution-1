<div class="culmn">
  <section id="hello" class="home bg-mega">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="main_home text-center">
          <div class="home_text">
            <h4 class="text-white"><em><%= t ".quotations" %></em></h4>
            <h5 class="text-white"><em><%= t ".author" %></em></h5>
          </div>
        </div>
      </div>
    </div>
  </section> 
  <section id="feature" class="feature p-top-100">
    <div class="container">
      <div class="row">
        <div class="main_feature">
          <div class="col-md-6 m-top-50">
            <div class="head_title">
              <h2><%= link_to t(".yogis_read"), posts_path %></h2>
              <h5><em><%= t ".description" %></em></h5>
              <div class="separator_left"></div>
            </div>
            <div class="feature_content wow fadeIn m-top-40">
              <h4><%= @posts.first.title if @posts.first.title.present? %></h4>
              <p><%= truncate @posts.first.content.html_safe, length: Settings.max_length_text, :omission => "", :escape => false %></p>
              <div class="feature_btns m-top-30 btn btn-default">
                <%= link_to post_path(@posts.first.id) do %>
                  <span><%= t ".read_more" %></span>
                  <i class="fa fa-long-arrow-right"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="feature_photo wow fadeIn sm-m-top-40">
            <div class="photo_border"></div>
            <div class="feature_img">
              <%= link_to image_tag("yogis_read.jpg"), "#" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section> <!--End off About section -->
  <section id="gallery" class="gallery margin-top-120 bg-grey">
    <div class="container">
      <div class="row">
        <div class="main-gallery roomy-80">
          <div class="col-md-12">
            <div class="head_title text-left sm-text-center wow fadeInDown">
              <h2><%= t ".yogis_watch" %></h2>
              <h5><em><%= t ".des_watch" %></em></h5>
              <div class="separator_left"></div>
            </div>
          </div>
          <div class="col-md-12">
            <% @videos.each do |video| %>
              <div class="col-md-4">
                <div class="grid text-center">
                  <div class="grid-item transition metal ium">
                    <%= video_tag video.video_url.to_s, controls: true %>
                    <div class="grid_hover_area text-center">
                      <div class="grid_hover_text m-top-110">
                        <h4 class="text-white"><%= link_to video.name, video_path(video.id) %></h4>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- scroll up-->
  <div class="scrollup">
    <a href="#"><i class="fa fa-chevron-up"></i></a>
  </div><!-- End off scroll up -->
</div>
